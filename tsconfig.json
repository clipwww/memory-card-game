{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.iterable",
      "es2016.array.include"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": false,
    "strictNullChecks": false,
    "removeComments": true,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
